/* eslint-disable @typescript-eslint/no-unused-vars */
import {
  Body,
  Controller,
  Delete,
  Get,
  Param,
  Post,
  Put,
  Query,
} from "@nestjs/common";
import { CreateCatDto, ListAllTodos, UpdateTodoDto } from "./dto";

@Controller("todo")
export class TodoController {
  @Get()
  getAllTodo(@Query() query: ListAllTodos) {
    return "This action returns all Todo's";
  }

  @Get(":id")
  getTodoById(@Param("id") id: string) {
    return `This action returns Todo By  #${id}`;
  }

  @Post()
  async create(@Body() createTodoDto: CreateCatDto) {
    return "This action adds a new todo";
  }

  @Put(":id")
  update(@Param("id") id: string, @Body() updateTodoDto: UpdateTodoDto) {
    return `This action updates a #${id} Todo`;
  }

  @Delete(":id")
  remove(@Param("id") id: string) {
    return `This action removes a #${id} Todo`;
  }
}
